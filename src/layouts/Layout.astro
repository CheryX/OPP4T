---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800&family=Roboto:wght@400;700&display=swap');

	:root {
		--dark: #383D3B;
		--light: #EEE5E9;
		--gray: #7C7C7C;
		--accent-light: #92DCE5;
		--accent: #52DEE5;
	}
	html {
		font-family: 'JetBrains Mono', system-ui, sans-serif;
		background-color: var(--dark);
		color: var(--light);
	}
	body {
		margin: 0;
	}
	button {
		font-family: 'JetBrains Mono', system-ui, sans-serif;
	}
</style>
